<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="session-segments"
        pageWidth="555" pageHeight="2000" columnWidth="555"
        leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0"
        whenNoDataType="AllSectionsNoDetail"
        isIgnorePagination="true">

    <!-- styles (must be before parameters/fields) -->
    <style name="Base" fontName="SansSerif" fontSize="9"/>
    <style name="Muted" style="Base" forecolor="#6C757D"/>
    <style name="Bold" style="Base" isBold="true"/>
    <style name="Mono" fontName="Monospaced" fontSize="9"/>

    <!-- fields: SegmentPdf -->
    <field name="startLabel" class="java.lang.String"/>
    <field name="endLabel" class="java.lang.String"/>
    <field name="durationLabel" class="java.lang.String"/>
    <field name="metaLine" class="java.lang.String"/>
    <field name="comment" class="java.lang.String"/>

    <columnHeader>
        <band height="16">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="16" mode="Opaque" backcolor="#F8F9FA"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="0" y="2" width="120" height="12" style="Muted"/>
                <text><![CDATA[Start]]></text>
            </staticText>
            <staticText>
                <reportElement x="120" y="2" width="120" height="12" style="Muted"/>
                <text><![CDATA[Ende]]></text>
            </staticText>
            <staticText>
                <reportElement x="240" y="2" width="90" height="12" style="Muted"/>
                <text><![CDATA[Dauer]]></text>
            </staticText>
            <staticText>
                <reportElement x="330" y="2" width="225" height="12" style="Muted"/>
                <text><![CDATA[Details]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="34" splitType="Stretch">
            <textField>
                <reportElement x="0" y="2" width="120" height="12" style="Base"/>
                <textFieldExpression><![CDATA[$F{startLabel}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="120" y="2" width="120" height="12" style="Base"/>
                <textFieldExpression><![CDATA[$F{endLabel}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="240" y="2" width="90" height="12" style="Bold"/>
                <textFieldExpression><![CDATA[$F{durationLabel}]]></textFieldExpression>
            </textField>

            <textField textAdjust="StretchHeight">
                <reportElement x="330" y="2" width="225" height="12" style="Base"/>
                <textFieldExpression><![CDATA[$F{metaLine}]]></textFieldExpression>
            </textField>

            <!-- comment line (optional, wraps) -->
            <textField textAdjust="StretchHeight">
                <reportElement x="0" y="16" width="555" height="16" style="Muted"/>
                <textFieldExpression><![CDATA[$F{comment}]]></textFieldExpression>
            </textField>

            <!-- subtle separator -->
            <line>
                <reportElement x="0" y="33" width="555" height="1" forecolor="#E9ECEF"/>
            </line>
        </band>
    </detail>
</jasperReport>
